- timezones = ActiveSupport::TimeZone.all.to_json

= form_for [@project.namespace.becomes(Namespace), @project, @pipeline_schedule], as: :pipeline_schedule, html: { id: "new-pipeline-schedule-form", class: "form-horizontal js-pipeline-schedule-form js-requires-input gl-show-field-errors" } do |f|
  = form_errors(@pipeline_schedule)
  .form-group
    = f.label :description, 'Description', class: 'control-label'
    .col-sm-10
      = f.text_field :description, class: 'form-control', required: true, autofocus: true
  .form-group
    = f.label :cron, 'Cron Pattern', class: 'control-label'
    .col-sm-10
      = f.text_field :cron, class: 'form-control', required: false, autofocus: true, value: "0 0 * * *"
      %a{ href: 'https://en.wikipedia.org/wiki/Cron', _blank: 'true' } Cron syntax
  .form-group
    = f.label :cron_timezone, 'Cron Timezone', class: 'control-label'
    .col-sm-10
      = dropdown_tag("Select a timezone", options: { toggle_class: 'btn js-timezone-dropdown', title: "Select a timezone", filter: true, placeholder: "Filter", data: { data: timezones } } )
  .form-group
    = f.label :ref, 'Branch', class: 'control-label'
    .col-sm-10
      = f.select(:ref, @project.repository.branch_names, {}, {class: 'select2 select-wide'})
  .form-group
    = f.label :active, 'Active', class: 'control-label'
    .col-sm-10
      = f.check_box :active, class: 'form-control', required: false, value: @pipeline_schedule.active?
  .form-actions
    = f.submit 'Save pipeline schedule', class: 'btn btn-create', tabindex: 3
    = link_to 'Cancel', pipeline_schedules_path(@project), class: 'btn btn-cancel'
  #mutable-input-list